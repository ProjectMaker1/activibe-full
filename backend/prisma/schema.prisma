generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  password  String
  username  String     @unique
  role      Role       @default(USER)
  badges    Int        @default(0) 
  lastSeenBadges Int   @default(0)
  createdAt DateTime   @default(now())
  campaigns Campaign[]
  chats     ChatSession[] 
  country   String?
  isBlocked Boolean    @default(false)
}

model Campaign {
  id          Int             @id @default(autoincrement())
  title       String
  description String

  imageUrl    String?
  videoUrl    String?

  country     String?
  topic       String?
  subtopic    String?
  tools       String?
  subTool     String? 

  date        DateTime        @default(now())
  status      CampaignStatus  @default(PENDING)
  createdAt   DateTime        @default(now())

  createdBy   User?           @relation(fields: [createdById], references: [id], onDelete: SetNull)
  createdById Int?

  media       CampaignMedia[]
}


// ახალი მოდელი: ბევრზე-ბევრი media თითო კამპანიაზე
model CampaignMedia {
  id         Int         @id @default(autoincrement())
  url        String
  kind       MediaType   // IMAGE ან VIDEO
  order      Int         @default(0)
  createdAt  DateTime    @default(now())

  campaign   Campaign    @relation(fields: [campaignId], references: [id])
  campaignId Int
}

enum Role {
  USER
  ADMIN
}

enum CampaignStatus {
  PENDING
  APPROVED
  REJECTED
}

// ახალი enum – მედიის ტიპი
enum MediaType {
  IMAGE
  VIDEO
}
model Topic {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())

  subtopics SubTopic[]
}

model SubTopic {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())

  topic     Topic     @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId   Int

  @@unique([topicId, name])
}

model Tool {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  createdAt DateTime   @default(now())
  isActive  Boolean    @default(true)

  subTools  SubTool[]
}

model SubTool {
  id        Int       @id @default(autoincrement())
  name      String
  createdAt DateTime  @default(now())

  tool      Tool      @relation(fields: [toolId], references: [id], onDelete: Cascade)
  toolId    Int

  @@unique([toolId, name]) // იგივე ტულში ერთი და იგივე სახელი რომ არ დ_DUPლიკირდეს
}

/// ჩატის სესია (ერთი საუბარი მენტორთან)
model ChatSession {
  id          Int           @id @default(autoincrement())
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      Int

  topicName   String?
  mentorName  String?
  toolName    String?
  subToolName String?

  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  messages    ChatMessage[]

  @@index([userId, createdAt])
}

/// ერთი მესიჯი ჩატში
model ChatMessage {
  id         Int              @id @default(autoincrement())
  session    ChatSession      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  sessionId  Int

  from       ChatSender       // USER / BOT / SYSTEM
  text       String
  createdAt  DateTime         @default(now())
}

enum ChatSender {
  USER
  BOT
  SYSTEM
}
